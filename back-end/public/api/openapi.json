{
    "openapi": "3.0.0",
    "info": {
        "title": "Knowledge Learning API",
        "description": "Documentation OpenAPI générée depuis le code (Symfony 8 / PHP 8.4)",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/csrf": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Récupérer un token CSRF pour la SPA Angular",
                "description": "Retourne un token CSRF à utiliser dans le header X-CSRF-TOKEN pour les requêtes d'écriture (POST/PUT/PATCH/DELETE)",
                "operationId": "bb263b64c6469628e4782f84e60f9951",
                "responses": {
                    "200": {
                        "description": "Token CSRF généré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "csrfToken"
                                    ],
                                    "properties": {
                                        "csrfToken": {
                                            "type": "string",
                                            "example": "Zk9sMTRyV2Q5T1p..."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Connexion (session cookie)",
                "description": "Authentifie un utilisateur et établit une session cookie. ",
                "operationId": "b6c70aa02695bdaff727ef5698bb952b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Identifiants invalides"
                    },
                    "403": {
                        "description": "Email non vérifié"
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Inscription utilisateur",
                "description": "Créer un utilisateur avec le statut en attente de vérification (par email)",
                "operationId": "authRegister",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@test.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8,
                                        "example": "User123!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur crée (en attente de vérification)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": "123"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@test.com"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "PENDING_VERIFICATION"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": [
                                                    "L'email doit être valide"
                                                ],
                                                "password": [
                                                    "Le mot de passe doit contenir au moins 8 caractères"
                                                ],
                                                "emptyFields": [
                                                    "Tous les champs doivent être remplis"
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Email déjà existant",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email déjà existant."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/verify-email": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Vérifier un compte via URL signée",
                "description": "Valide le compte utilisateur à partir d'une URL signée envoyée par email.",
                "operationId": "authVerifyEmail",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID utilisateur",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": 123
                    },
                    {
                        "name": "signature",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "expires",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "hash",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Compte vérifié"
                    },
                    "404": {
                        "description": "Utilisateur introuvable",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lien invalide ou expiré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/ping": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Ping API Health Check",
                "operationId": "e45aa589431b0de59a81022e6caf2c7c",
                "responses": {
                    "200": {
                        "description": "API is healthy"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth"
        },
        {
            "name": "System",
            "description": "System"
        }
    ]
}