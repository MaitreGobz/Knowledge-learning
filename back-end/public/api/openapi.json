{
    "openapi": "3.0.0",
    "info": {
        "title": "Knowledge Learning API",
        "description": "Documentation OpenAPI générée depuis le code (Symfony 8 / PHP 8.4)",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/register": {
            "post": {
                "summary": "Inscription utilisateur",
                "description": "Créer un utilisateur avec le statut en attente de vérification (par email)",
                "operationId": "authRegister",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@test.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8,
                                        "example": "User123!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur crée (en attente de vérification)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": "123"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@test.com"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "PENDING_VERIFICATION"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": [
                                                    "L'email doit être valide"
                                                ],
                                                "password": [
                                                    "Le mot de passe doit contenir au moins 8 caractères"
                                                ],
                                                "emptyFields": [
                                                    "Tous les champs doivent être remplis"
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Email déjà existant",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email déjà existant."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/ping": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Ping API Health Check",
                "operationId": "e45aa589431b0de59a81022e6caf2c7c",
                "responses": {
                    "200": {
                        "description": "API is healthy"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "System",
            "description": "System"
        }
    ]
}